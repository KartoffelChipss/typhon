{
  "name": "typhon",
  "productName": "Typhon",
  "version": "0.1.3",
  "description": "A VERY nice web browser!",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "typhon",
    "mac": {
      "target": "dmg",
      "icon": "assets/typhon_gradient.ico"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/typhon_gradient.ico"
    },
    "nsis": {
      "installerIcon": "assets/typhon_gradient.ico",
      "uninstallerIcon": "assets/typhon_gradient.ico",
      "uninstallDisplayName": "Typhon",
      "license": "LICENSE",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": "https://github.com/KartoffelChipss/typhon",
  "author": "Kartoffelchips#0445",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.25.1",
    "cross-fetch": "^3.1.5",
    "electron-store": "^8.1.0",
    "electron-tabs": "^1.0.1"
  }
}
